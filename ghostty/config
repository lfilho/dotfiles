# Appearance

macos-icon = custom-style
macos-icon-ghost-color = #04B575
macos-icon-screen-color = #04B575
macos-icon-frame = beige

window-width = 99999
window-height = 99999
theme = catppuccin-mocha
font-family = FiraCode Nerd Font Mono
font-size = 16
unfocused-split-fill = 555

# Keybindings

keybind = super+k=goto_split:top
keybind = super+l=goto_split:right
keybind = super+j=goto_split:bottom
keybind = super+h=goto_split:left

keybind = alt+left=resize_split:left,10
keybind = alt+right=resize_split:right,10
keybind = alt+up=resize_split:up,10
keybind = alt+down=resize_split:down,10

# Other

auto-update = check
mouse-hide-while-typing = true
